<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head.ejs') %>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script defer src="/app.js"></script>
</head>

<body>
    <nav>
        <%- include ('../partials/nav.ejs') %>
    </nav>
    <div class="container">
        <div class="heading-bar">
            <h2 class="page-heading">CREATE NEW HABIT </h2>
            <%- include ('../partials/back.ejs') %>
        </div>
        <form class="auth-form" action="/habits/" method="POST">
            <p>
                <label for="name">Name</label>
                <input type="text" name="name" id="name" />
            </p>
            <p>
                <label for="category">Category</label>
                <input type="text" name="category" id="category" />
            </p>
            <p>
                <input type="text" name="color" id="color-name" value="white" />
                <div>Category color (optional)</div>
                <div class="category-col white category-border"></div>
                <div class="category-col violet"></div>
                <div class="category-col cyan"></div>
                <div class="category-col green"></div>
                <div class="category-col yellow"></div>
                <div class="category-col orange"></div>
            </p>
            <input type="submit" value="CREATE">
        </form>
    </div>
</body>

</html>